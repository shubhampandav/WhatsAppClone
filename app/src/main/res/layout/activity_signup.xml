<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".signup">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="310dp"
        android:layout_height="696dp"
        android:layout_marginStart="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:srcCompat="@drawable/boy" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="380dp"
        android:alpha="0.6"

        android:layout_height="445dp"


        android:background="#3E3F40"
        android:backgroundTint="#3E3F40"
        app:cardBackgroundColor="#3E3F40"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1E78777A">

            <EditText
                android:id="@+id/emailtv"
                android:layout_width="340dp"
                android:layout_height="47dp"
                android:height="60dp"
                android:background="@drawable/round"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.594"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.039" />

            <Button
                android:id="@+id/continuebtn"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:height="60dp"
                android:backgroundTint="#26E156"
                android:elevation="12dp"
                android:text="continue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/emailtv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/emailtv"
                app:layout_constraintTop_toBottomOf="@+id/emailtv" />

            <Button
                android:id="@+id/googlebtn"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:height="60dp"
                android:backgroundTint="#ffff"
                android:drawableLeft="@drawable/google"
                android:gravity="center"
                android:text="Continue with Google"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/continuebtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/continuebtn"
                app:layout_constraintTop_toBottomOf="@+id/continuebtn" />

            <Button
                android:id="@+id/fbbtn"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:height="60dp"
                android:backgroundTint="#ffff"
                android:drawableLeft="@drawable/fb"
                android:gravity="center"
                android:text="Continue with Facebook"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/googlebtn"
                app:layout_constraintStart_toStartOf="@+id/googlebtn"
                app:layout_constraintTop_toBottomOf="@+id/googlebtn" />

            <Button
                android:id="@+id/phonebtn"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:height="60dp"
                android:backgroundTint="#ffff"
                android:drawableLeft="@drawable/phone"
                android:gravity="center"
                android:text="Continue with Phone "
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/fbbtn"
                app:layout_constraintStart_toStartOf="@+id/fbbtn"
                app:layout_constraintTop_toBottomOf="@+id/fbbtn" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OR"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/googlebtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/continuebtn" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/alata"
                android:text="Already have an Account ? "
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/phonebtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/phonebtn"
                app:layout_constraintTop_toBottomOf="@+id/phonebtn" />

            <TextView
                android:id="@+id/signintv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/alata"
                android:text="Sign In"
                android:textColor="#4CAF50"
                app:layout_constraintEnd_toEndOf="@+id/phonebtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/phonebtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fontFamily="@font/alata"
        android:text="Sign Up"
        android:textColor="#040303"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

</androidx.constraintlayout.widget.ConstraintLayout>